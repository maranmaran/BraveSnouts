{
  "hosting": {
    "public": "brave-snouts-frontend/dist/brave-snouts-frontend",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      // cache images
      {
        "source": "**/*.@(jpg|jpeg|gif|png)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=7200"
          }
        ]
      }
      // Hard reset -remove cache
      // { 
      //   "source":"**", 
      //   "headers": [
      //     {
      //       "key": "Cache-Control",
      //       "value": "no-cache, no-store, must-revalidate"
      //     }
      //   ]
      // },
      // { 
      //   "source":"/service-worker.js", 
      //   "headers": [
      //     {
      //       "key": "Cache-Control",
      //       "value": "no-cache, no-store, must-revalidate"
      //     }
      //   ]
      // },
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    },
    "firestore": {
      "port": 8080
    },
    "pubsub": {
      "port": 8085
    }
  }
}