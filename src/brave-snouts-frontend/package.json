{
  "name": "brave-snouts-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "config": "ts-node ./src/environments/set-env.script.ts",
    "start": "npm run config -- --environment=dev && ng serve -c development",
    "build-dev": "npm run install-safe && npm run config:dev && ng build -c development --output-hashing=all",
    "build-prod": "npm run install-safe && npm run config:prod && ng build -c production --output-hashing=all",
    "test": "ng test",
    "lint": "ng lint",
    "install-safe": "npm ci && npm audit fix",
    "config:dev": "npm run config -- --environment=dev",
    "config:prod": "npm run config -- --environment=prod"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~16.0.0",
    "@angular/cdk": "^16.0.0",
    "@angular/common": "~16.0.0",
    "@angular/compiler": "~16.0.0",
    "@angular/core": "^16.0.0",
    "@angular/fire": "^7.5.0",
    "@angular/forms": "~16.0.0",
    "@angular/material": "^16.0.0",
    "@angular/platform-browser": "~16.0.0",
    "@angular/platform-browser-dynamic": "~16.0.0",
    "@angular/router": "~16.0.0",
    "@ngneat/hot-toast": "^5.0.1",
    "@ngneat/overview": "^4.1.0",
    "@tweenjs/tween.js": "^20.0.3",
    "date-fns": "^2.30.0",
    "firebase": "^9.21.0",
    "fs": "0.0.1-security",
    "fs-extra": "^11.1.1",
    "guid-typescript": "^1.0.9",
    "hammerjs": "^2.0.8",
    "ng-gallery": "^8.0.4",
    "ngx-countdown": "^15.0.0",
    "ngx-drag-scroll": "^15.0.0",
    "ngx-dropzone": "^3.1.0",
    "ngx-google-analytics": "^14.0.1",
    "ngx-mat-timepicker": "~15.1.7",
    "ngx-quill": "^22.0.0",
    "quill": "^1.3.7",
    "rxjs": "^7.8.1",
    "subsink": "^1.0.2",
    "tslib": "^2.5.0",
    "uuid": "^9.0.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/architect": "0.1600.0",
    "@angular-devkit/build-angular": "~16.0.0",
    "@angular/cli": "~16.0.0",
    "@angular/compiler-cli": "~16.0.0",
    "@types/hammerjs": "^2.0.41",
    "@types/node": "^20.1.0",
    "autoprefixer": "^10.4.14",
    "dotenv": "^16.0.3",
    "firebase-tools": "^11.30.0",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.2",
    "ts-node": "~10.9.1",
    "tslint": "~6.1.0",
    "typescript": "^5.0.4"
  },
  "overrides": {
    "@angular/fire": {
      "@angular/common": "^16.0.0",
      "@angular/core": "^16.0.0",
      "@angular/platform-browser": "^16.0.0",
      "@angular/platform-browser-dynamic": "^16.0.0"
    }
  }
}