{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Debug Functions",
            "port": 9229
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests with Emulators",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/test/test-assets/.env",
            "preLaunchTask": "compile-function-tests-with-emulators",
            "postDebugTask": "terminate-tasks",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--require",
                "${workspaceFolder}/lib/src/index.js",
                "--reporter",
                "dot",
                "--slow",
                "5000",
                "--colors",
                "${workspaceFolder}/lib/test/**/*.spec.js",
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests no Emulators",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/test/test-assets/.env",
            "preLaunchTask": "compile-function-tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--require",
                "${workspaceFolder}/lib/src/index.js",
                "--reporter",
                "dot",
                "--slow",
                "5000",
                "--colors",
                "${workspaceFolder}/lib/test/**/*.spec.js",
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
    ],
    "inputs": [
        {
            "id": "scriptName",
            "type": "pickString",
            "default": "test-all-mails",
            "options": [
                "generate-auction",
                "test-all-mails",
            ],
            "description": "Enter the script name to debug (e.g., generate-auction)",
        }
    ]
}